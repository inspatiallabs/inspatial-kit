{
  "license": "Intentional-License-1.0",
  "homepage": "https://www.inspatial.io",
  "repository": "https://github.com/inspatiallabs/inspatial-kit",
  "author": "InSpatial Labs",
  "bugs": "https://github.com/inspatiallabs/inspatial-kit/issues",
  "description": "InSpatial Kit",
  "workspace": [
    "./*",
    "./in-accesibility/*",
    "./in-build/*",
    "./in-cloud/*",
    "./in-motion/*",
    "./in-readme/*",
    "./in-renderer/*",
    "./in-route/*",
    "./in-runtime/*",
    "./in-style/*",
    "./in-teract/*",
    "./in-ternationalize/*",
    "./in-test/*",
    "./in-type/*",
    "./in-vader/*",
    "./in-widget/*",
    "./in-zero/*"
  ],
  "tasks": {
    "test": "deno test --allow-read --allow-write --allow-net --allow-env",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check **/*.ts",
    "clean": "rm -rf node_modules && rm -rf deno.lock && rm -rf dist"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@inspatial/kit",
    "types": ["@inspatial/kit/jsx-runtime"],
    "allowImportingTsExtensions": true,
    "lib": [
      "dom",
      "dom.iterable",
      "deno.ns",
      "dom.asynciterable",
      "deno.unstable",
      "deno.worker",
      "deno.window",
      "esnext",
      "webworker.asynciterable",
      "webworker",
      "webworker.importscripts",
      "webworker.iterable",
      "decorators",
      "scripthost"
    ]
  },
  "unstable": [
    "cron",
    "kv",
    "webgpu",
    "byonm",
    "http",
    "fs",
    "net",
    "fmt-sql",
    "worker-options",
    "broadcast-channel",
    "node-globals",
    "bare-node-builtins",
    "detect-cjs"
  ],
  "nodeModulesDir": "auto",
  "fmt": {
    "semiColons": false,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.mdx"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended", "jsx", "jsr"],
      "include": [
        "no-var",
        "no-window",
        "no-unused-vars",
        "ban-untagged-todo",
        "no-empty-interface",
        "no-slow-types",
        "no-deprecated-deno-api",
        "no-duplicate-case",
        "no-dupe-class-members",
        "camelcase",
        "no-dupe-args",
        "no-sloppy-imports",
        "no-class-assign",
        "no-unsafe-finally"
      ],
      "exclude": ["no-explicit-any", "ban-ts-comment"]
    },
    "exclude": [
      "**/test/**/*",
      "**/*.test.ts",
      "**/*.test.tsx",
      "**/*.test.jsx",
      "**/*.test.js",
      "**/*_test.ts",
      "**/*_test.tsx",
      "**/*_test.jsx",
      "**/*_test.js"
    ]
  }
}
