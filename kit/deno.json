{
  "license": "Intentional-License-1.0",
  "homepage": "https://www.inspatial.io",
  "repository": "https://github.com/inspatiallabs/inspatial-kit",
  "author": "InSpatial Labs",
  "bugs": "https://github.com/inspatiallabs/inspatial-kit/issues",
  "description": "InSpatial Kit",
  "workspace": [
    "./modules/*",
    "./modules/in-accesibility/*",
    "./modules/in-build/*",
    "./modules/in-cloud/*",
    "./modules/in-motion/*",
    "./modules/in-readme/*",
    "./modules/in-renderer/*",
    "./modules/in-route/*",
    "./modules/in-runtime/*",
    "./modules/in-style/*",
    "./modules/in-teract/*",
    "./modules/in-ternationalize/*",
    "./modules/in-test/*",
    "./modules/in-type/*",
    "./modules/in-vader/*",
    "./modules/in-widget/*",
    "./modules/in-zero/*"
  ],
  "tasks": {
    "test": "deno test --no-check --allow-env --allow-read --allow-write --allow-run --allow-net --unstable-sloppy-imports \"./modules/**/*.test.{ts,tsx,js,jsx}\" \"./modules/**/*_test.{ts,tsx,js,jsx}\" \"./modules/**/*.spec.{ts,tsx,js,jsx}\"",
    "test:style": "deno test --no-check --allow-env --allow-read --allow-write --allow-run --allow-net --unstable-sloppy-imports ./modules/in-style/src/",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check **/*.ts",
    "clean": "rm -rf node_modules && rm -rf deno.lock && rm -rf dist",
    "publish": "deno publish --allow-slow-types --no-check --allow-dirty"
  },
  "publish": {
    "exclude": [
      ".github",
      ".vscode",
      "**/*.test.ts",
      "**/*.spec.ts",
      "test_deps.ts"
    ]
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@inspatial/kit",
    "types": ["@inspatial/kit/jsx-runtime"],
    "lib": [
      "dom",
      "dom.iterable",
      "deno.ns",
      "dom.asynciterable",
      "deno.unstable",
      "deno.worker",
      "deno.window",
      "esnext",
      "webworker.asynciterable",
      "webworker",
      "webworker.importscripts",
      "webworker.iterable",
      "decorators",
      "scripthost"
    ]
  },
  "unstable": [
    "cron",
    "kv",
    "webgpu",
    "byonm",
    "http",
    "fs",
    "net",
    "fmt-sql",
    "worker-options",
    "broadcast-channel",
    "node-globals",
    "bare-node-builtins",
    "detect-cjs"
  ],
  "nodeModulesDir": "auto",
  "fmt": {
    "semiColons": false,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.mdx"]
  },
  "imports": {
    "@in/kit/": "./modules/",

    "@in/test/": "./modules/in-test/src/",
    "@in/test": "./modules/in-test/src/index.ts",

    "@in/style/": "./modules/in-style/src/",
    "@in/style": "./modules/in-style/src/index.ts",

    "@in/widget/component/": "./modules/in-widget/src/component/",
    "@in/widget/control-flow/": "./modules/in-widget/src/control-flow/",
    "@in/widget/data-flow/": "./modules/in-widget/src/data-flow/",
    "@in/widget/navigation/": "./modules/in-widget/src/navigation/",
    "@in/widget/structure/": "./modules/in-widget/src/structure/",
    "@in/widget/media/": "./modules/in-widget/src/media/",
    "@in/widget/performance/": "./modules/in-widget/src/performance/",
    "@in/widget/input/": "./modules/in-widget/src/input/",
    "@in/widget/theme/": "./modules/in-widget/src/theme/",
    "@in/widget/presentation/": "./modules/in-widget/src/presentation/",
    "@in/widget/typography/": "./modules/in-widget/src/typography/",
    "@in/widget/ornament/": "./modules/in-widget/src/ornament/",
    "@in/widget/icon/": "./modules/in-widget/src/icon/",
    "@in/widget/recursive/": "./modules/in-widget/src/recursive/",

    "@in/renderer/": "./modules/in-renderer/src/",
    "@in/runtime/": "./modules/in-runtime/src/",

    "@inspatial/kit": "./modules/",

    "@inspatial/kit/runtime": "./modules/in-runtime/src/index.ts",
    "@inspatial/kit/jsx-runtime": "./modules/in-runtime/src/jsx-runtime.ts",
    "@inspatial/kit/jsx-dev-runtime": "./modules/in-runtime/src/jsx-dev-runtime.ts",

    "@in/extension/": "./modules/in-teract/src/extension/",
    "@in/extension": "./modules/in-teract/src/extension/index.ts",

    "@in/dom/memory/": "./modules/in-renderer/src/in-dom/memory/",
    "@in/dom/renderer/": "./modules/in-renderer/src/in-dom/renderer/",
    "@in/dom": "./modules/in-renderer/src/in-dom/index.ts",
    "@in/dom/": "./modules/in-renderer/src/in-dom/",

    "@in/ssr/": "./modules/in-renderer/src/in-ssr/",
    "@in/ssr": "./modules/in-renderer/src/in-ssr/index.ts",

    "@in/gpu/": "./modules/in-renderer/src/in-gpu/",
    "@in/gpu": "./modules/in-renderer/src/in-gpu/index.ts",

    "@in/xr/": "./modules/in-renderer/src/in-xr/",
    "@in/xr": "./modules/in-renderer/src/in-xr/index.ts",

    "@in/android-xr/": "./modules/in-renderer/src/in-android-xr/",
    "@in/android-xr": "./modules/in-renderer/src/in-android-xr/index.ts",

    "@in/vision-os/": "./modules/in-renderer/src/in-vision-os/",
    "@in/vision-os": "./modules/in-renderer/src/in-vision-os/index.ts",

    "@in/horizon-os/": "./modules/in-renderer/src/in-horizon-os/",
    "@in/horizon-os": "./modules/in-renderer/src/in-horizon-os/index.ts",

    "@in/nativescript/": "./modules/in-renderer/src/in-nativescript/",
    "@in/nativescript": "./modules/in-renderer/src/in-nativescript/index.ts",

    "@in/zero": "./modules/in-zero/src/index.ts",
    "@in/zero/": "./modules/in-zero/src/",

    "@in/teract/": "./modules/in-teract/src/",
    "@in/teract/signal/": "./modules/in-teract/src/signal/",
    "@in/teract/state/": "./modules/in-teract/src/state/",
    "@in/teract/trigger/": "./modules/in-teract/src/trigger/",

    "@in/route/": "./modules/in-route/src/",

    "@in/motion/": "./modules/in-motion/src/",
    "@in/motion": "./modules/in-motion/src/index.ts",

    "@in/vader/env/": "./modules/in-vader/src/env/",
    "@in/vader/env": "./modules/in-vader/src/env/index.ts",

    "@in/vader/debug/": "./modules/in-vader/debug/",
    "@in/vader/remove-from-arr/": "./modules/in-vader/remove-from-arr/",
    "@in/vader": "./modules/in-vader/src/index.ts",

    "@in/build/": "./modules/in-build/src/",

    "@in/cloud/": "./modules/in-cloud/src/",
    "@in/cloud": "./modules/in-cloud/src/index.ts",

    "@inspatial/cloud-client": "jsr:@inspatial/cloud-client@^0.1.28"
  },
  "lint": {
    "rules": {
      "tags": ["recommended", "jsx", "jsr"],
      "include": [
        "no-var",
        "no-window",
        "no-unused-vars",
        "ban-untagged-todo",
        "no-empty-interface",
        "no-slow-types",
        "no-deprecated-deno-api",
        "no-duplicate-case",
        "no-dupe-class-members",
        "camelcase",
        "no-dupe-args",
        "no-sloppy-imports",
        "no-class-assign",
        "no-unsafe-finally"
      ],
      "exclude": ["no-explicit-any", "ban-ts-comment"]
    },
    "exclude": [
      "**/test/**/*",
      "**/*.test.ts",
      "**/*.test.tsx",
      "**/*.test.jsx",
      "**/*.test.js",
      "**/*.spec.ts",
      "**/*.spec.tsx",
      "**/*.spec.jsx",
      "**/*.spec.js",
      "**/*_test.ts",
      "**/*_test.tsx",
      "**/*_test.jsx",
      "**/*_test.js"
    ]
  }
}
