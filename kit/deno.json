{
  "name": "@inspatial/kit",
  "license": "Apache-2.0",
  "version": "1.0.0",
  "exports": {
    ".": "./modules/index.ts",
    "./signal": "./modules/signal/src/index.ts",
    "./widget": "./modules/widget/src/index.ts",
    "./widget/control-flow": "./modules/widget/control-flow/index.ts",
    "./widget/navigation": "./modules/widget/navigation/index.ts",
    "./widget/structure": "./modules/widget/structure/index.ts",
    "./widget/media": "./modules/widget/src/media/index.ts",
    "./extension": "./modules/extension/src/index.ts",
    "./renderer": "./modules/renderer/src/index.ts",
    "./renderer/create-renderer": "./modules/renderer/src/create-renderer.ts",
    "./renderer/dom": "./modules/renderer/src/dom.ts",
    "./renderer/ssr": "./modules/renderer/src/ssr.ts",
    "./renderer/xr": "./modules/renderer/src/xr.ts",
    "./renderer/android-xr": "./modules/renderer/src/android-xr.ts",
    "./renderer/vision-os": "./modules/renderer/src/vision-os.ts",
    "./renderer/horizon-os": "./modules/renderer/src/horizon-os.ts",
    "./renderer/generic-xr": "./modules/renderer/src/generic-xr.ts",
    "./renderer/nativescript": "./modules/renderer/src/nativescript.ts",
    "./runtime": "./modules/runtime/src/index.ts",
    "./jsx-runtime": "./modules/runtime/src/jsx-runtime.ts",
    "./jsx-dev-runtime": "./modules/runtime/src/jsx-dev-runtime.ts",
    "./state": "./modules/state/src/index.ts",
    "./state/core": "./modules/state/src/core/index.ts",
    "./state/trigger": "./modules/state/src/trigger/index.ts",
    "./env": "./modules/env/src/index.ts",
    "./build": "./modules/build/src/index.ts",
    "./cloud": "./modules/cloud/src/index.ts",
    "./debug": "./modules/debug/src/index.ts",
    "./style": "./modules/style/src/index.ts",
    "./motion": "./modules/motion/src/index.ts",
    "./vader": "./modules/vader/src/index.ts",
    "./presentation": "./modules/widget/src/presentation/index.ts"
  },
  "tasks": {
    "test": "deno test --allow-read --allow-write --unstable-sloppy-imports ./modules/",
    "test:style": "deno test --allow-read --allow-write --unstable-sloppy-imports ./modules/style/src/",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check **/*.ts",
    "clean": "rm -rf node_modules && rm -rf deno.lock && rm -rf dist",
    "publish": "deno publish --allow-slow-types --no-check --allow-dirty"
  },
  "publish": {
    "exclude": [".github", ".vscode", "**/*.test.ts", "test_deps.ts"]
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@inspatial/kit",
    "allowImportingTsExtensions": true,
    "lib": [
      "dom",
      "dom.iterable",
      "deno.ns",
      "dom.asynciterable",
      "deno.unstable",
      "deno.worker",
      "deno.window",
      "esnext",
      "webworker.asynciterable",
      "webworker",
      "webworker.importscripts",
      "webworker.iterable",
      "decorators",
      "scripthost"
    ]
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.mdx"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended", "jsx", "jsr"],
      "include": [
        "no-var",
        "no-window",
        "no-unused-vars",
        "ban-untagged-todo",
        "no-empty-interface",
        "no-slow-types",
        "no-deprecated-deno-api",
        "no-duplicate-case",
        "no-dupe-class-members",
        "camelcase",
        "no-dupe-args",
        "no-sloppy-imports",
        "no-class-assign",
        "no-unsafe-finally"
      ],
      "exclude": ["no-explicit-any", "ban-ts-comment"]
    }
  },
  "imports": {
    "@in/kit/": "./modules/",

    "@in/test": "jsr:@inspatial/test@^0.1.1",

    "@in/style/": "./modules/style/src/",
    "@in/style": "./modules/style/src/index.ts",

    "@in/widget/component/": "./modules/widget/src/component/",
    "@in/widget/control-flow/": "./modules/widget/src/control-flow/",
    "@in/widget/navigation/": "./modules/widget/src/navigation/",
    "@in/widget/structure/": "./modules/widget/src/structure/",
    "@in/widget/media/": "./modules/widget/src/media/",
    "@in/widget/input/": "./modules/widget/src/input/",
    "@in/widget/theme/": "./modules/widget/src/theme/",
    "@in/widget/presentation/": "./modules/widget/src/presentation/",

    "@in/renderer/": "./modules/renderer/src/",
    "@in/runtime/": "./modules/runtime/src/",

    "@inspatial/kit/runtime": "./modules/runtime/src/index.ts",
    "@inspatial/kit/jsx-runtime": "./modules/runtime/src/jsx-runtime.ts",
    "@inspatial/kit/jsx-dev-runtime": "./modules/runtime/src/jsx-dev-runtime.ts",

    "@in/extension/": "./modules/extension/src/",
    "@in/dom/": "./modules/renderer/src/",
    "@in/ssr/": "./modules/renderer/src/",
    "@in/gpu/": "./modules/renderer/src/",
    "@in/xr/": "./modules/renderer/src/",
    "@in/android-xr/": "./modules/renderer/src/",
    "@in/vision-os/": "./modules/renderer/src/",
    "@in/horizon-os/": "./modules/renderer/src/",
    "@in/nativescript/": "./modules/renderer/src/",

    "@in/zero": "./modules/zero/src/index.ts",
    "@in/zero/": "./modules/zero/src/",

    "@in/teract/signal/": "./modules/signal/src/",
    "@in/teract/state/": "./modules/state/src/core/",
    "@in/teract/trigger/": "./modules/state/src/trigger/",

    "@in/route/": "./modules/route/src/",

    "@in/motion/": "./modules/motion/src/",
    "@in/motion": "./modules/motion/src/index.ts",

    "@in/vader/env/": "./modules/vader/src/env/",
    "@in/vader/debug/": "./modules/vader/debug/",
    "@in/vader/remove-from-arr/": "./modules/vader/remove-from-arr/",
    "@in/vader": "./modules/vader/src/index.ts",

    "@in/build/": "./modules/build/src/",

    "@in/cloud/": "./modules/cloud/src/",
    "@in/cloud": "./modules/cloud/src/index.ts",

    "@inspatial/cloud-client": "jsr:@inspatial/cloud-client@^0.1.28"
  }
}
