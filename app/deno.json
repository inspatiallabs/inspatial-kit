{
  "nodeModulesDir": "auto",
  "tasks": {
    "run": "deno run -A --node-modules-dir npm:vite",
    "build": "deno run -A --node-modules-dir npm:vite build",
    "bundle": "deno bundle src/config/render.ts dist/bundle.js --platform=browser --sourcemap --minify",
    "preview": "deno run -A --node-modules-dir npm:vite preview",
    "serve": "deno run --allow-net --allow-read jsr:@std/http@1/file-server dist/",
    "clean": "rm -rf dist && rm -rf node_modules && rm -rf deno.lock"
  },
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable", "deno.ns"],
    "jsxFactory": "R.c",
    "jsxFragmentFactory": "R.f",
    "jsxImportSource": "@inspatial/run",
    "jsx": "react-jsx"
  },
  "imports": {
    "@inspatial/run": "../run/src/index.ts",
    "@inspatial/run/signal": "../run/src/signal/index.ts",
    "@inspatial/run/kit": "../run/src/kit/index.ts",
    "@inspatial/run/renderer": "../run/src/renderer/index.ts",
    "@inspatial/run/runtime": "../run/src/runtime/index.ts",
    "@inspatial/run/trigger": "../run/src/trigger/index.ts",
    "@inspatial/run/env": "../run/src/env/index.ts",
    "@inspatial/run/hot": "../run/src/hot/index.ts",
    "@inspatial/run/debug": "../run/src/debug/index.ts",
    "@deno/vite-plugin": "npm:@deno/vite-plugin@^1.0.5",
    "@tailwindcss/vite": "npm:@tailwindcss/vite@^4.1.11",
    "tailwindcss": "npm:tailwindcss@^4.1.11",
    "vite": "npm:vite@^7.0.6"
  }
}
