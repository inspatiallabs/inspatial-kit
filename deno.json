{
  "license": "Intentional-License-1.0",
  "homepage": "https://www.inspatial.io",
  "repository": "https://github.com/inspatiallabs/inspatial-kit",
  "author": "InSpatial Labs",
  "bugs": "https://github.com/inspatiallabs/inspatial-kit/issues",
  "description": "InSpatial Kit",
  "workspace": [
    "./modules/*",
    "./modules/in-accesibility/*",
    "./modules/in-build/*",
    "./modules/in-cloud/*",
    "./modules/in-motion/*",
    "./modules/in-readme/*",
    "./modules/in-renderer/*/*",
    "./modules/in-route/*",
    "./modules/in-runtime/*",
    "./modules/in-style/*",
    "./modules/in-teract/*/*",
    "./modules/in-ternationalize/*",
    "./modules/in-test/*",
    "./modules/in-type/*",
    "./modules/in-vader/*/*",
    "./modules/in-widget/*",
    "./modules/in-zero/*",
    "./modules/inspatial-kit/*"
  ],
  "tasks": {
    "test": "deno test --no-check --allow-env --allow-read --allow-write --allow-run --allow-net --unstable-sloppy-imports \"./modules/**/*.test.{ts,tsx,js,jsx}\" \"./modules/**/*_test.{ts,tsx,js,jsx}\" \"./modules/**/*.spec.{ts,tsx,js,jsx}\"",
    "test:style": "deno test --no-check --allow-env --allow-read --allow-write --allow-run --allow-net --unstable-sloppy-imports ./modules/in-style/src/",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check **/*.ts",
    "clean": "rm -rf node_modules && rm -rf deno.lock && rm -rf dist && rm -rf testing",
    "publish": "deno publish --allow-slow-types --no-check --allow-dirty"
  },
  "publish": {
    "exclude": [
      ".github",
      ".vscode",
      "**/*.test.ts",
      "**/*.spec.ts",
      "test_deps.ts"
    ]
  },
  "imports": {
    "@in/test": "./modules/in-test/src/index.ts",
    "@in/zero": "./modules/in-zero/src/index.ts"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@inspatial/kit",
    "lib": [
      "dom",
      "dom.iterable",
      "deno.ns",
      "dom.asynciterable",
      "deno.unstable",
      "deno.worker",
      "deno.window",
      "esnext",
      "webworker.asynciterable",
      "webworker",
      "webworker.importscripts",
      "webworker.iterable",
      "decorators",
      "scripthost"
    ]
  },
  "unstable": [
    "cron",
    "kv",
    "webgpu",
    "byonm",
    "http",
    "fs",
    "net",
    "fmt-sql",
    "worker-options",
    "broadcast-channel",
    "node-globals",
    "bare-node-builtins",
    "detect-cjs"
  ],
  "nodeModulesDir": "auto",
  "fmt": {
    "semiColons": false,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.mdx"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended", "jsx", "jsr"],
      "include": [
        "no-var",
        "no-window",
        "no-unused-vars",
        "ban-untagged-todo",
        "no-empty-interface",
        "no-slow-types",
        "no-deprecated-deno-api",
        "no-duplicate-case",
        "no-dupe-class-members",
        "camelcase",
        "no-dupe-args",
        "no-sloppy-imports",
        "no-class-assign",
        "no-unsafe-finally"
      ],
      "exclude": ["no-explicit-any", "ban-ts-comment"]
    },
    "exclude": [
      "**/test/**/*",
      "**/*.test.ts",
      "**/*.test.tsx",
      "**/*.test.jsx",
      "**/*.test.js",
      "**/*.spec.ts",
      "**/*.spec.tsx",
      "**/*.spec.jsx",
      "**/*.spec.js",
      "**/*_test.ts",
      "**/*_test.tsx",
      "**/*_test.jsx",
      "**/*_test.js"
    ]
  }
}
