{
  "name": "@inspatial/run",
  "license": "Intentional-License-1.0",
  "version": "0.4.0",
  "tasks": {
    "test": "deno test --allow-env --allow-read --allow-write --allow-run --allow-net --allow-hrtime --allow-env --allow-all ./src/index.test.ts",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check **/*.ts",
    "clean": "rm -rf node_modules && rm -rf deno.lock && rm -rf dist"
  },
  "publish": {
    "exclude": [".github", ".vscode", "**/*.test.ts", "test_deps.ts"]
  },

  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "lib": [
      "dom",
      "dom.iterable",
      "deno.ns",
      "dom.asynciterable",
      "deno.unstable",
      "deno.worker",
      "deno.window",
      "esnext",
      "webworker.asynciterable",
      "webworker",
      "webworker.importscripts",
      "webworker.iterable",
      "decorators",
      "scripthost"
    ]
  },
  "unstable": [
    "cron",
    "kv",
    "webgpu",
    "byonm",
    "http",
    "fs",
    "net",
    "fmt-sql",
    "worker-options",
    "broadcast-channel",
    "node-globals",
    "bare-node-builtins",
    "detect-cjs"
  ],
  "nodeModulesDir": "auto",
  "fmt": {
    "semiColons": false,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx", "**/*.mdx"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended", "jsx", "jsr"],
      "include": [
        "no-var",
        "no-window",
        "no-unused-vars",
        "ban-untagged-todo",
        "no-empty-interface",
        "no-slow-types",
        "no-deprecated-deno-api",
        "no-duplicate-case",
        "no-dupe-class-members",
        "camelcase",
        "no-dupe-args",
        "no-sloppy-imports",
        "no-class-assign",
        "no-unsafe-finally"
      ],
      "exclude": ["no-explicit-any", "ban-ts-comment"]
    }
  },
  "imports": {}
}
